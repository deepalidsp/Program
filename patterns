<?php
$n = 10;
for($i=0;$i<$n;$i++){
  for($j=0;$j<=$i;$j++){
     echo $j;
  }
  echo '<br>';
}
$n = 0;
for($i=8;$i>=$n;$i--){
  for($j=0;$j<=$i;$j++){
     echo $j;
   }
  echo '<br>';
}
?>

